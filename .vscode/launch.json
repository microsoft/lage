  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "node_modules/jest/bin/jest.js",
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ],
      "args": ["--runInBand", "${fileBasenameNoExtension}"],
      "sourceMaps": true,
    }
  ]
}