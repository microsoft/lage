{
  "extends": "@tsconfig/docusaurus/tsconfig.json",
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2022",
    "moduleResolution": "Node",
    "declaration": true,
    "lib": ["ES2017"],
    "allowJs": true,
    "outDir": "./lib",
    "strict": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "jsx": "react"
  },
  "include": ["src"]
}
