{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node16",
    "declaration": true,
    "lib": ["ES2020"],
    "allowJs": true,
    "strict": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "typeRoots": ["../node_modules/@types", "../types", "node_modules/@types"]
  },
  "ts-node": {
    "swc": true,
    "transpileOnly": true
  }
}
