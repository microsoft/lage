{
  "name": "@lage-run/lage-monorepo",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/lage.git"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "scripts"
    ]
  },
  "scripts": {
    "build": "lage build --verbose",
    "watch": "lage build --verbose --unstable-watch",
    "change": "beachball change",
    "checkchange": "beachball check",
    "release": "beachball publish -y",
    "test": "lage test --verbose",
    "lint": "lage lint --verbose",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "postinstall": "patch-package",
    "lage:local": "node ./packages/lage/bin/lage.js"
  },
  "devDependencies": {
    "@swc/core": "^1.3.14",
    "@swc/jest": "^0.2.23",
    "@types/jest": "^29.4.0",
    "@types/node": "^14.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "beachball": "^2.43.1",
    "eslint": "^8.20.0",
    "husky": "^8.0.3",
    "jest": "^29.0.0",
    "lage-npm": "npm:lage@^1.0.0",
    "lint-staged": "^12.0.0",
    "patch-package": "^6.5.1",
    "prettier": "^2.8.3",
    "syncpack": "^8.4.11",
    "typescript": "^4.8.4",
    "workspace-tools": "^0.29.0"
  },
  "lint-staged": {
    "*": "prettier --write"
  }
}
